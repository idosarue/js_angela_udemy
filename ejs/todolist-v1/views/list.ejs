<%- include('header'); -%>
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>    

    <a href="/">Home</a>
    <a href="/work">Work</a>


   <div class="box">
        <% for(let task in tasks) { %>
            <div class="item">
                <input type="checkbox" name="" id="">
                <p class='item'><%= tasks[task] %></p>
            </div>
        <% } %>

        <form class="item" action="/" method="post">
            <input name="task" type="text" name="" id="" placeholder="New Item" autocomplete="off">
            <button name="list" type="submit" value=<%= listTitle %>>+</button>
        </form>
   </div>

<%- include('footer'); -%>
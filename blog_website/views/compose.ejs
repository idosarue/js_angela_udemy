<%- include('partials/header'); -%>
<h1>
  Compose
</h1>


<form action="/compose" method="post">
  <div class="form-group">
    <label for="postTitle">Title</label>
    <input class="form-control" type="text" name="postTitle" value="<%= typeof postTitleValue != 'undefined' ? postTitleValue : ''%>">
    <% if(typeof titleError !== 'undefined' && titleError.msg) { %>
      <div class="alert alert-danger" role="alert">
        <%= titleError.msg %>
    </div>
    <% } %>    
  </div>
  
  <div class="form-group">
    <label for="postBody">Post</label>
    <textarea class="form-control" name="postBody"><%= typeof postContentValue != 'undefined' ? postContentValue : ''%></textarea>
    <% if(typeof contentError !== 'undefined' && contentError.msg) { %>
      <div class="alert alert-danger" role="alert">
        <%= contentError.msg %>
    </div>
  <% } %>
  </div>
  <br>
  <button class="btn btn-primary" type="submit">Publish</button>


</form>


<%- include('partials/footer'); -%> 